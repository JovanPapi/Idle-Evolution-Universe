<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/elements_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="38dp">

        <LinearLayout
            android:id="@+id/first_element_view"
            android:layout_width="205dp"
            android:layout_height="270dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/requirements"
                android:layout_width="match_parent"
                android:layout_height="05dp"
                android:layout_weight="1"
                android:text="Requirements: "
                android:textAlignment="center"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/element_image_required_for_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:contentDescription="@string/element_atom"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/element_electron" />

            <TextView
                android:id="@+id/element_name_required_for_upgrade"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:text="@string/element_electron"
                android:textAlignment="center"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_element_view"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/upgrade"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Upgrade: "
                android:textAlignment="center"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/element_image_for_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:contentDescription="@string/element_atom"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/element_atom" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:id="@+id/element_name_for_upgrade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/element_electron"
                    android:textAlignment="center"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>